#chapter2

EXAMPLE  A_310  
HYPOTHESES:
  POINT A B C ;
  ON_LINE D B C;
  ON_LINE E A C;
  INTERSECTION_LL F  E D  A B ;
SHOW: (RATIO A F F B) (RATIO B D D C) (RATIO C E E A) =  -1 .

EXAMPLE  GAUSS_LINE  
HYPOTHESES:
  POINT A_0 A_1 A_2 A_3 ;
  INTERSECTION_LL X  A_0 A_3  A_1 A_2 ;
  INTERSECTION_LL Y  A_2 A_3  A_1 A_0 ;
  MIDPOINT M_1 A_1 A_3 ;
  MIDPOINT M_2 A_0 A_2 ;
  MIDPOINT M_3 X Y ;
SHOW:  COLLINEAR M_1 M_2 M_3.

EXAMPLE  M_24  
HYPOTHESES:
  POINT A B C ;
  ON_PLINE D C A B;
  ON_LINE E B C;
  INTERSECTION_PL H  E A B  A D ;
  INTERSECTION_LL F  B D  E H ;
  INTERSECTION_LL G  A C  E F ;
SHOW: (RATIO E F A B ) = -(RATIO H G A B ).

EXAMPLE  AFFINE  
HYPOTHESES:
  POINT A B P ;
  ON_LINE C A P;
  INTERSECTION_LP D  B P  C A B ;
  INTERSECTION_LL Q  B C  A D ;
  INTERSECTION_LL M  A B  P Q ;
SHOW:  MIDPOINT M A B.

EXAMPLE  PAPPUS  
HYPOTHESES:
  POINT A A_1 B B_1 ;
  ON_LINE C A B;
  ON_LINE C_1 A_1 B_1;
  INTERSECTION_LL P  A_1 B  A B_1 ;
  INTERSECTION_LL Q  A C_1  A_1 C ;
  INTERSECTION_LL S  B_1 C  B C_1 ;
  INTERSECTION_LL T  B_1 C  P Q ;
SHOW: EQ_RATIO B_1 S C S B_1 T C T.

EXAMPLE  MM_2  
HYPOTHESES:
  POINT S A B C ;
  ON_LINE A1 S A;
  INTERSECTION_LP B1  S B  A1 A B ;
  INTERSECTION_LP C1  S C  A1 A C ;
SHOW: (AREA B1 B C ) = (AREA C1 B C ).

EXAMPLE  PAS_5  
HYPOTHESES:
  POINT A B A1 ;
  ON_LINE C A B;
  ON_PLINE B1 A B A1;
  INTERSECTION_LP C1  A1 B1  A C A1 ;
SHOW: (AREA B C B1 ) = (AREA C1 C B1 ).

#deri
EXAMPLE  WG12_2  
HYPOTHESES:
  POINT A B C ;
  MRATIO A1 B C r_1;
  MRATIO B1 C A r_2;
  MRATIO C1 A B r_3;
SHOW: (AREA A1 B1 C1 ) = (AREA A B C ).

EXAMPLE  PGRAM1  
HYPOTHESES:
  POINT A B C ;
  INTERSECTION_PP D  A B C  C A B ;
  LRATIO A_1 C D r;
  LRATIO B_1 D A r;
  INTERSECTION_LL A_2  A A_1  B B_1 ;
SHOW: 2 (r^2 - 2 r +2)(AREA A B A_2 ) = (1-r) (AREA A B C D ).

EXAMPLE  FD4  
HYPOTHESES:
  POINT A B C D ;
  LRATIO E A B r_1;
  LRATIO F D C r_1;
  LRATIO H A D r_2;
  LRATIO G B C r_2;
  INTERSECTION_LL I  E F  H G ;
SHOW: (1-r_2) (RATIO E I I F ) =  r_2.

EXAMPLE  FD3  
HYPOTHESES:
  POINT A B C D ;
  LRATIO X A B (n) (2 n +1);
  LRATIO U D C (n) (2 n +1);
  LRATIO Q D C (n +1) (2 n +1);
  PRATIO V U D C (1) (2 n +1);
  PRATIO Y X A B (1) (2 n +1);
SHOW:  (2 n +1)((AREA X Y Q ) + (AREA X V U )) = (AREA A B C D ).

#undo
EXAMPLE  CON7_3  
HYPOTHESES:
  POINT P1 P2 P4 ;
  LRATIO P3 P1 P2 r_1;
  LRATIO P5 P1 P4 r_2;
  INTERSECTION_LL P6  P2 P4  P3 P5 ;
  INTERSECTION_LL P7  P2 P5  P3 P4 ;
SHOW: (AREA P1 P6 P7 ) =  1 .

#undo
EXAMPLE  CON9_33  
HYPOTHESES:
  POINT P1 P3 P5 ;
  LRATIO P7 P1 P3 r_1;
  LRATIO P8 P1 P5 r_2;
  LRATIO P9 P3 P5 r_3;
  LRATIO P2 P5 P7 r_4; 
  INTERSECTION_LL P4  P1 P9  P2 P8 ;
  INTERSECTION_LL P6  P3 P8  P2 P9 ;
SHOW:  COLLINEAR P4 P6 P7.

#undo
EXAMPLE  CON9_32  
HYPOTHESES:
  POINT P1 P4 P7 ;
  LRATIO P3 P1 P7 r_1;
  LRATIO P6 P1 P4 r_2;
  LRATIO P8 P3 P6 r_3;
  LRATIO P9 P4 P7 r_4;
  INTERSECTION_LL P5  P1 P8  P3 P9 ;
  INTERSECTION_LL P2  P4 P8  P6 P9 ;
SHOW:  COLLINEAR P2 P5 P7.

EXAMPLE  CEVA_4  
HYPOTHESES:
  POINT A B C D O ;
  INTERSECTION_LL E  B D  A O ;
  INTERSECTION_LL F  A C  B O ;
  INTERSECTION_LL G  B D  C O ;
  INTERSECTION_LL H  A C  D O ;
SHOW: (RATIO C F F A )(RATIO B E E D )(RATIO A H H C )(RATIO D G G B ) =  1 .

EXAMPLE  CEVA_S6  
HYPOTHESES:
  POINT A B C D E ;
  INTERSECTION_LL P  A D  B E ;
  INTERSECTION_LL Q  A C  B E ;
  INTERSECTION_LL R  B D  A C ;
  INTERSECTION_LL S  B D  C E ;
  INTERSECTION_LL T  A D  C E ;
SHOW: (RATIO A T A D)(RATIO D R D B)(RATIO B P B E)(RATIO E S E C)(RATIO C Q C A)
    = (RATIO P D A D)(RATIO S B D B)(RATIO Q E B E)(RATIO T C E C)(RATIO R A C A).

EXAMPLE  PRATT_5  
HYPOTHESES:
  POINT A B C D E ;
  INTERSECTION_PP A_1  B C A  A E B ;
  INTERSECTION_PP B_1  C B D  B A C ;
  INTERSECTION_PP C_1  D C E  C B D ;
  INTERSECTION_PP D_1  E A D  D C E ;
  INTERSECTION_PP E_1  A B E  E A D ;
SHOW: (RATIO A_1 B B B_1)(RATIO B_1 C C C_1)
      (RATIO C_1 D D D_1)(RATIO D_1 E E E_1)(RATIO E_1 A A A_1) =  1.
