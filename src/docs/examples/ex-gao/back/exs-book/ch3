#chapter 3

EXAMPLE  ORTH  
HYPOTHESES:
  POINT A B C ;
  FOOT E B A C ;
  FOOT F A B C ;
  INTERSECTION_LL H  A F  B E ;
SHOW:  PERPENDICULAR A B C H.

EXAMPLE  D237_2  
HYPOTHESES:
  POINT A B C ;
  TRATIO E A A B 1;
  TRATIO G A A C -1;
SHOW:  PERPENDICULAR E C G B.

EXAMPLE  CH62_2  
HYPOTHESES:
  POINT A B C ;
  TRATIO F A A B 1;
  TRATIO H A A C -1;
  MIDPOINT M B C ;
SHOW:  PERPENDICULAR F H A M.

EXAMPLE  O59_5  
HYPOTHESES:
  POINT A B ;
  ON_LINE M A B;
  TRATIO C M M A 1;
  MIDPOINT U A C ;
  TRATIO E M M B -1;
  MIDPOINT V E B ;
  INTERSECTION_LC N  B C  V B  ;
  INTERSECTION_LL T  B C  A E ;
SHOW: EQ_RATIO B N C N B T C T.

EXAMPLE  A_353  
HYPOTHESES:
  POINT O A B X Y ;
  MRATIO C A B r;
  MRATIO D A B (-1 r);
  INTERSECTION_LL P  O A  X Y ;
  INTERSECTION_LL Q  O B  X Y ;
  INTERSECTION_LL R  O C  X Y ;
  INTERSECTION_LL S  O D  X Y ;
SHOW:  HARMONIC P Q S R.

EXAMPLE  C26_17  
HYPOTHESES:
  POINT O A X ;
  LRATIO P O A r_1;
  INVERSION Q P O A ;
  MIDPOINT U P O ;
  INTERSECTION_LC R  O X  U O  ;
  INVERSION G R O A ;
SHOW:  PERPENDICULAR G Q O A.

EXAMPLE  M10_40  
HYPOTHESES:
  CONSTANT r^2-3 ;
  POINT A B C ;
  MIDPOINT E A C ;
  TRATIO B_1 E E A r;
  MIDPOINT F B C ;
  TRATIO A_1 F F C r;
  MIDPOINT G A B ;
  TRATIO C_1 G G B (-r);
SHOW:  PARALLEL A_1 C_1 C B_1.

EXAMPLE  A32_58  
HYPOTHESES:
  POINT A B C ;
  FOOT D A B C ;
  ON_LINE J A D;
  INTERSECTION_LL M  A B  C J ;
  INTERSECTION_LL N  A C  B J ;
SHOW:  EQANGLE M D A A D N.

#undo
EXAMPLE  FANG1  
HYPOTHESES:
  POINT A B ;
  ON_BLINE O A B;
  TRATIO P B B A r;
  INTERSECTION_LC C  A P  O A  ;
SHOW: (TANGENT A C B) =  1 .

EXAMPLE  A_224  
HYPOTHESES:
  POINT A B C ;
  ORTHOCENTER H A B C ;
  CIRCUMCENTER O A B C ;
  CIRCUMCENTER A_1 B C H ;
  CIRCUMCENTER B_1 A C H ;
  CIRCUMCENTER C_1 A B H ;
SHOW:  PARALLEL B_1 C_1 B C.

EXAMPLE  A68_9  
HYPOTHESES:
  POINT A B C X ;
  CENTROID G A B C ;
  FOOT D A G X ;
  FOOT E B G X ;
  FOOT F C G X ;
SHOW:  (RATIO E B D A ) + (RATIO F C D A ) =  -1 .

EXAMPLE  A_120  
HYPOTHESES:
  POINT B C I ;
  INCENTER A C B I;
  INTERSECTION_LL D  A I  B C ;
  INTERSECTION_TL I_A  B B I  A I ;
SHOW:  HARMONIC A D I I_A.

#Euler
EXAMPLE  A_201  
HYPOTHESES:
  POINT A B C ;
  CIRCUMCENTER O A B C ;
  CENTROID M A B C ;
  LRATIO H M O -2;
SHOW:  PERPENDICULAR A H B C.

EXAMPLE  SIMONS
HYPOTHESES:
  CIRCLE A B C D;
  FOOT E D B C;
  FOOT F D A C;
  FOOT G D A B;
  INTERSECTION_LL G_1  E F  A B ;
SHOW: EQ_RATIO A G B G A G_1 B G_1.

EXAMPLE  PASCAL  
HYPOTHESES:
  CIRCLE A B C D F E ;
  INTERSECTION_LL P  D F  A B ;
  INTERSECTION_LL Q  F E  B C ;
  INTERSECTION_LL S  E A  C D ;
  INTERSECTION_LL S1  P Q  C D ;
SHOW: EQ_RATIO C S D S C S1 D S1.

#improve
EXAMPLE  CANTOR_3  
HYPOTHESES:
  CIRCLE A B C D ;
  CIRCUMCENTER O A B C ;
  MIDPOINT G A D ;
  MIDPOINT F A B ;
  MIDPOINT E C D ;
  INTERSECTION_PP N  E O F  F O E ;
SHOW:  PERPENDICULAR G N B C.

EXAMPLE  GBUTT  
HYPOTHESES:
  CIRCLE A B C D E F ;
  INTERSECTION_LL M  D C  A B ;
  INTERSECTION_LL N  E F  A B ;
  INTERSECTION_LL G  A B  C F ;
  INTERSECTION_LL H  D E  A B ;
SHOW: (RATIO M G A G )(RATIO B H N H ) = (RATIO B M A B )(RATIO B A A N ).
#undo
EXAMPLE  NS  
HYPOTHESES:
  POINT A B ;
  TRATIO D A A B 1;
  INTERSECTION_PP C D A B B D A;
  INTERSECTION_PP G C B D D C B;
  INTERSECTION_LC E  C G  B D  ;
  INTERSECTION_LL F  C D  B E ;
SHOW:  EQDISTANCE D E D F.
#undo
EXAMPLE  REDU1  
HYPOTHESES:
  POINT A B ;
  ON_BLINE C A B;
  ON_LINE D A C;
  INTERSECTION_LC E  B C  B (SQ_DIS A D)  ;
  INTERSECTION_LL F  A B  D E ;
SHOW:  MIDPOINT D F E.
